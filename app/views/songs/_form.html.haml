= form_for(@song) do |f|
  - if @song.errors.any?
    #error_explanation
      %h2
        = pluralize(@song.errors.count, "error")
        prohibited this song from being saved:
      %ul
        - @song.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_area :title
  .field
    = f.label :album_id
    %br/
    = f.number_field :album_id
  .actions
    = f.submit
